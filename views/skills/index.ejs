<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
    <% skills.forEach(el => { %>
      <form action="/skills/<%= el.id %>?_method=DELETE" method="POST" class="delForm">
        <button class="delBtn" type="submit">X</button>
    </form>
      <li> <a href="skills/<%= el.id%>"><%= el.skill %></a>
      -
      <%= el.done %>
      </li>
      <% }); %>
  </ul>
  <a href="skills/new">Add New Skill</a>
  </body>
</html>
